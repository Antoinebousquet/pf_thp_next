<!-- Links edit profile -->
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<%= render 'layouts/side-navbar-doctor' %>
<%= render 'layouts/top-navbar-doctor' %>
<div class="container">
  <div class="row">
    <div id="content">
      <% if @practionner.errors.any? %>
        <p>Erreurs lors de la modifications : </p>
        <ul>
          <% @practionner.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
      <% end %>
      <section class="page-section" id="editprofile">
        <div class="mainbody container-fluid">
          <%= form_for @practionner do |f| %>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h1 class="panel-title pull-left" style="font-size:30px;">Mon profil</h1>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Votre nom</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <label for="First_name">Prénom</label>
                    <%= f.text_field :first_name, class: "form-control" %> <br>
                    <label for="Last_name">Nom</label>
                    <%= f.text_field :last_name, class: "form-control" %>
                  </form>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Votre photo</h3>
                  <br>
                  <br>
                  <div align="center">
                    <div class="col-lg-12 col-md-12">
                      <img class="img-thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="300px" height="300px">
                    </div>
                    <div class="col-lg-12 col-md-12">
                      <button class="btn btn-primary"><i class="fa fa-upload" aria-hidden="true"></i> Télécharger une nouvelle photo de profil ! </button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Vos certifications</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <label for="Specialty">Votre spécialité</label><br>
                    <%= f.text_area :specialty, class: "form-control" %> <br>
                    <label for="Diploma">Vos diplômes</label><br>
                    <%= f.text_area :diploma, class: "form-control" %>
                  </form>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Informations</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <label for="Your_location">Adresse de votre cabinet</label><br>
                    <%= f.text_field :adress, class: "form-control" %>
                    <br>
                  </form>
                </div>
              </div>
              <hr>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Sauvegarder mon profil</h3>
                  <br>
                  <br>
                  <%= f.submit "Mettre à jour" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
</div>
