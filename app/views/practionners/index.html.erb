<%= render 'layouts/side-navbar-doctor' %>
<!-- Page Content  -->
<div id="content">
  <%= render 'layouts/top-navbar-doctor' %>
  <div class="container">
    <h2 class="text-center">Mon profil</h2>
    <hr class="accent mb-3">
    <div class="line"></div>
    <section class="page-section bg-light" id="editprofile">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-md-6 text-center">
            <img class="mx-auto rounded-circle" src="https://i.goopics.net/nyPvX.png" alt=""><br>
            <br>
            <h3 class="section-subheading"><%= current_practionner.first_name %> <%= current_practionner.last_name %></h3>
            <p class="text-muted"><%= current_practionner.specialty %></p>
          </div>
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                Informations
              </div>
              <div class="card-body">
                <p><%= current_practionner.diploma %></p>
                <p><%= current_practionner.certifications %></p>
              </div>
              <div class="card-header">
                Adresse
              </div>
              <div class="card-body">
                <p><%= current_practionner.adress %></p>
              </div>
              <div class="card-header">
                Contact
              </div>
              <div class="card-body">
                <p><%= current_practionner.email %></p>
              </div>
              <div class="card-header">
                Modifier vos informations
              </div>
              <div class="card-body">
                <center><%= link_to "Editer mon profil", edit_practionner_path(@id_user), class:"button_color-profile" %></center>
              </div>
            </div>
            <br>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
</div>
