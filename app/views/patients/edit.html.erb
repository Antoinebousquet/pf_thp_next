<!-- Links edit profile -->
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!-- Page Content  -->
<%= render 'layouts/side-navbar-patient' %>
<%= render 'layouts/top-navbar-patient' %>
<div class="container">
  <div class="row">
    <div id="content">
      <section class="page-section">
        <div class="mainbody container-fluid">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
              <%= form_for @patient do |f| %>
                <div class="panel-body">
                  <h1 class="panel-title pull-left" style="font-size:30px;">Mon profil</h1>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Identité</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <label for="First_name"> Prénom</label>
                    <%= f.text_field :first_name, class: "form-control" %>
                    <br>
                    <label for="Last_name">Nom</label>
                    <%= f.text_field :last_name, class: "form-control" %>
                  </form>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Votre photo</h3>
                  <br>
                  <br>
                  <div align="center">
                    <div class="col-lg-12 col-md-12">
                      <img class="img-thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="300px" height="300px">
                    </div>
                    <div class="col-lg-12 col-md-12">
                      <button class="btn btn-primary"><i class="fa fa-upload" aria-hidden="true"></i> Télécharger une nouvelle photo de profil ! </button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Votre traitement</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <%= f.text_area :treatment, class: "form-control" %>
                  </form>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Informations</h3>
                  <br>
                  <br>
                  <form class="form-horizontal">
                    <label for="Your_location">Ville</label>
                    <%= f.text_field :city, class: "form-control" %>
                    <br>
                    <label for="Your_gender">Sexe</label>
                    <%= f.text_field :sexe, class: "form-control" %>
                    <br>
                    <label>Date de naissance</label>
                    <div class="form-inline" id="birth-date">
                      <%= f.datetime_field :birth, class: "form-control" %>
                    </div>
                  </form>
                </div>
              </div>
              <hr>
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3 class="panel-title pull-left">Sauvegarder mon profil</h3>
                  <br>
                  <br>
                  <%= f.submit "Mettre à jour" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>

