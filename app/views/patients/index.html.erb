<%= render 'layouts/side-navbar-patient' %>
<!-- Page Content  -->
<div id="content">
  <%= render 'layouts/top-navbar-patient' %>
  <div class="container">
    <h2 class="text-center">Mon profil</h2>
    <hr class="accent mb-3">
    <section class="page-section bg-light" id="editprofile">
      <div class="container">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-md-6 text-center">
              <img class="mx-auto rounded-circle" src="https://i.goopics.net/nyPvX.png" alt=""><br>
              <br>
              <h3 class="section-subheading"><%= current_patient.first_name %> <%= current_patient.last_name %></h3>
              <p class="text-muted"><%= current_patient.city %></p>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  Informations
                </div>
                <div class="card-body">
                  <p><%= current_patient.sexe %></p>
                  <p><%= current_patient.birth %></p>
                </div>
                <div class="card-header">
                  Traitement
                </div>
                <div class="card-body">
                  <p><%= current_patient.treatment %></p>
                </div>
                <div class="card-header">
                  Contact
                </div>
                <div class="card-body">
                  <p><%= current_patient.phone %></p>
                  <p><%= current_patient.email %></p>
                </div>
                <div class="card-header">
                Modifier vos informations
                </div>
                <div class="card-body">
                <center><%= link_to "Editer mon profil", edit_patient_path(current_patient.id), class:"button_color-profile" %></center>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</div>
</div>